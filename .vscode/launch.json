    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Realtime Chat frontend",
            "request": "launch",
            "type": "pwa-chrome",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}/realtime-chat/frontend"
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Debug Task list",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "start"
            ],
            "cwd": "${workspaceFolder}/task-list",
            "env": {}
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Debug Realtime Chat backend",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "start"
            ],
            "cwd": "${workspaceFolder}/realtime-chat/backend",
            "env": {}
        },
        {
            "name": "Debug Task list fronend",
            "request": "launch",
            "type": "pwa-chrome",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}/task-list/client",
            "sourceMapPathOverrides": {
                "webpack:///src/*": "${webRoot}/*"
            }
        },
    ]
}